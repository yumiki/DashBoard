<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#224567">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="#224550"
            android:layout_margin="3dp"
            android:padding="15dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/velibTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="Stations VÃ©lib"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/renewVelib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_renew"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/velibRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listItem="@layout/velib_station_details">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>